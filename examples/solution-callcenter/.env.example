# LLM Provider (choose one)
# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Azure OpenAI (if using Azure)
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Voice Services
# Deepgram (Speech-to-Text)
DEEPGRAM_API_KEY=...

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=...

# Twilio (Telephony)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# Database (optional but recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/callcenter

# Redis (optional, for state management and caching)
REDIS_URL=redis://localhost:6379/0

# CRM Integration (example - customize for your CRM)
CRM_API_KEY=...
CRM_API_URL=https://api.your-crm.com/v1

# Email Service (for follow-up emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=support@yourcompany.com

# OpenTelemetry (optional, for observability)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=callcenter

# Server Configuration (optional overrides)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=info

# Feature Flags (optional overrides)
ENABLE_CALL_RECORDING=false
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TELEMETRY=false

# Business Configuration
MAX_CALL_DURATION=1800
ESCALATION_SENTIMENT_THRESHOLD=0.3

# Development/Testing
USE_MOCK_DATA=false  # Set to true to use mock data for testing
